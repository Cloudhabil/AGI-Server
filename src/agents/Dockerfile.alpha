# Alpha Agent Container
# Autonomous learning with local LLMs

FROM python:3.11-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir requests sqlite-utils

# Copy agent code
COPY agents/alpha_autonomous.py /app/
COPY agents/agent_utils.py /app/
COPY skills/base.py /app/skills/

# Create directories
RUN mkdir -p /app/memories /app/lessons /app/logs

# Set environment
ENV PYTHONUNBUFFERED=1
ENV AGENT_NAME=alpha

# Run autonomous learning
CMD ["python", "alpha_autonomous.py"]
