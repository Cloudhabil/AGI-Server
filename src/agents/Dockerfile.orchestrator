# Learning Session Orchestrator
# Coordinates autonomous learning between agents

FROM python:3.11-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir requests sqlite-utils

# Copy orchestrator code
COPY agents/session_orchestrator.py /app/
COPY agents/agent_utils.py /app/

# Create directories
RUN mkdir -p /app/professor-memories /app/alpha-memories /app/lessons /app/logs

# Set environment
ENV PYTHONUNBUFFERED=1

# Run orchestrator
CMD ["python", "session_orchestrator.py"]
