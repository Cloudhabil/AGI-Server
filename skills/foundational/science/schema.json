{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "skill_id": "foundational/science",
  "input": {
    "type": "object",
    "properties": {
      "capability": {"type": "string", "enum": ["analyze", "pipeline"]},
      "dataset": {"type": "string"},
      "goal": {"type": "string"},
      "tools": {"type": "array", "items": {"type": "string"}}
    },
    "required": ["capability"],
    "additionalProperties": false
  },
  "output": {
    "type": "object",
    "properties": {
      "plan": {"type": "array"},
      "workflow": {"type": "array"}
    }
  }
}
