{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "skill_id": "research/math-literature",
  "input": {
    "type": "object",
    "properties": {
      "capability": {
        "type": "string",
        "enum": [
          "search_arxiv",
          "get_paper_details",
          "search_riemann_hypothesis",
          "extract_recent_results"
        ],
        "default": "search_arxiv"
      },
      "query": {
        "type": "string",
        "description": "arXiv search query"
      },
      "arxiv_id": {
        "type": "string",
        "description": "arXiv identifier (e.g., 1234.5678)"
      },
      "max_results": {
        "type": "integer",
        "description": "Maximum number of results"
      },
      "sort_order": {
        "type": "string",
        "description": "Sort order for results"
      },
      "days_back": {
        "type": "integer",
        "description": "Search papers from last N days"
      }
    },
    "required": ["capability"]
  },
  "output": {
    "type": "object",
    "properties": {
      "success": {
        "type": "boolean"
      },
      "output": {
        "type": "object"
      },
      "error": {
        "type": "string"
      }
    }
  }
}
