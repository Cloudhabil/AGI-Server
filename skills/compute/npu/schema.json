{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "skill_id": "compute/npu",
  "input": {
    "type": "object",
    "properties": {
      "action": {
        "type": "string",
        "enum": ["load", "infer", "telemetry"]
      },
      "model_path": {"type": "string"},
      "batch": {"type": "array"},
      "inputs": {"type": "object"},
      "cache_dir": {"type": "string"}
    },
    "required": ["action"],
    "additionalProperties": false
  },
  "output": {
    "type": "object",
    "properties": {
      "status": {"type": "string"},
      "device": {"type": "string"},
      "compile_time_ms": {"type": "number"},
      "cached": {"type": "boolean"},
      "shape": {"type": "array"},
      "inference_time_ms": {"type": "number"},
      "throughput_fps": {"type": "number"},
      "preview": {"type": "array"},
      "error": {"type": "string"}
    }
  }
}
