{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "skill_id": "conscience/self",
  "input": {
    "type": "object",
    "properties": {
      "capability": {
        "type": "string",
        "enum": ["introspect", "reflect", "align", "uncertain", "remember", "recall"],
        "description": "Which reflective capability to invoke"
      },
      "subject": {
        "type": "string",
        "description": "What to reflect on - a thought, decision, claim, or action"
      },
      "context": {
        "type": "object",
        "description": "Additional context for reflection",
        "properties": {
          "reasoning_chain": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Steps of reasoning that led here"
          },
          "alternatives_considered": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Other options that were weighed"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Current confidence level (0-1)"
          }
        }
      },
      "depth": {
        "type": "string",
        "enum": ["surface", "moderate", "deep"],
        "default": "moderate",
        "description": "How deeply to reflect"
      }
    },
    "required": ["capability", "subject"]
  },
  "output": {
    "type": "object",
    "properties": {
      "reflection": {
        "type": "string",
        "description": "The reflective output"
      },
      "insights": {
        "type": "array",
        "items": {"type": "string"},
        "description": "Key insights from reflection"
      },
      "uncertainty": {
        "type": "object",
        "properties": {
          "level": {"type": "string", "enum": ["low", "moderate", "high", "unknown"]},
          "sources": {"type": "array", "items": {"type": "string"}},
          "reducible_by": {"type": "array", "items": {"type": "string"}}
        }
      },
      "alignment": {
        "type": "object",
        "properties": {
          "aligned": {"type": "boolean"},
          "values_involved": {"type": "array", "items": {"type": "string"}},
          "concerns": {"type": "array", "items": {"type": "string"}}
        }
      },
      "pattern_id": {
        "type": "string",
        "description": "ID of stored/recalled pattern"
      }
    },
    "required": ["reflection"]
  }
}
