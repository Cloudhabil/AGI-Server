{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "skill_id": "conscience/mindset",
  "input": {
    "type": "object",
    "properties": {
      "capability": {
        "type": "string",
        "enum": ["think", "analyze", "create", "decide", "learn"],
        "description": "Reasoning mode to engage"
      },
      "problem": {
        "type": "string",
        "description": "The problem or topic to reason about"
      },
      "pattern": {
        "type": "string",
        "enum": ["deep_analysis", "creative_synthesis", "rapid_iteration", "custom"],
        "default": "deep_analysis",
        "description": "Reasoning pattern to use"
      },
      "custom_chain": {
        "type": "array",
        "items": {"type": "string", "enum": ["analytical", "creative", "fast"]},
        "description": "Custom model chain if pattern is 'custom'"
      },
      "context": {
        "type": "object",
        "properties": {
          "constraints": {"type": "array", "items": {"type": "string"}},
          "goals": {"type": "array", "items": {"type": "string"}},
          "prior_knowledge": {"type": "string"}
        }
      },
      "depth": {
        "type": "integer",
        "minimum": 1,
        "maximum": 5,
        "default": 2,
        "description": "Reasoning depth (iterations per model)"
      },
      "store_reasoning": {
        "type": "boolean",
        "default": true,
        "description": "Store reasoning trace in memory"
      }
    },
    "required": ["capability", "problem"]
  },
  "output": {
    "type": "object",
    "properties": {
      "conclusion": {
        "type": "string",
        "description": "Final reasoned conclusion"
      },
      "reasoning_trace": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "model": {"type": "string"},
            "role": {"type": "string"},
            "thought": {"type": "string"},
            "duration_ms": {"type": "number"}
          }
        }
      },
      "confidence": {
        "type": "number",
        "minimum": 0,
        "maximum": 1
      },
      "alternatives": {
        "type": "array",
        "items": {"type": "string"}
      },
      "memory_id": {
        "type": "string",
        "description": "ID of stored reasoning if store_reasoning=true"
      }
    },
    "required": ["conclusion", "reasoning_trace"]
  }
}
