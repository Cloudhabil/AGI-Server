<?xml version="1.0" encoding="utf-8"?>
<!--
    Brahim Secure Intelligence - Theme
    Golden Ratio proportions in design
-->
<resources>

    <style name="Theme.BSI" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color (Golden - phi inspired) -->
        <item name="colorPrimary">@color/gold_primary</item>
        <item name="colorPrimaryVariant">@color/gold_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color (Security - beta inspired) -->
        <item name="colorSecondary">@color/security_blue</item>
        <item name="colorSecondaryVariant">@color/security_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Background -->
        <item name="android:windowBackground">@color/background_dark</item>
    </style>

    <!-- Light Theme -->
    <style name="Theme.BSI.Light" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/gold_primary</item>
        <item name="colorPrimaryVariant">@color/gold_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/security_blue</item>
        <item name="colorSecondaryVariant">@color/security_dark</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

</resources>
